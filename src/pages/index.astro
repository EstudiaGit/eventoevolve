  border-bottom: 3px solid var(--color-negro);
  padding: var(--spacing-sm) 0;
}

.ribbon-inner {
  display: flex;
  align-items: center;
  gap: var(--spacing-md);
  justify-content: center;
  text-align: center;
  font-weight: 700;
  flex-wrap: wrap;
}

.ribbon-tag {
  display: inline-flex;
  align-items: center;
  gap: 6px;
  padding: 6px 14px;
  background-color: var(--color-negro);
  color: var(--color-marfil);
  border: 2px solid var(--color-marfil);
  font-size: 12px;
  letter-spacing: 1px;
  text-transform: uppercase;
}

/* Core del footer */
.footer-core {
  position: relative;
  z-index: 1;
  padding: var(--spacing-2xl) 0;
  display: grid;
  gap: var(--spacing-xl);
  grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
}

.footer-brand {
  display: grid;
  gap: var(--spacing-sm);
}

.footer-logo {
  display: inline-block;
  font-family: 'Space Grotesk', sans-serif;
  font-size: 26px;
  font-weight: 800;
  letter-spacing: 1px;
  text-transform: uppercase;
  padding: 12px 20px;
  border: 3px solid var(--color-marfil);
  background: linear-gradient(135deg, rgba(255,255,255,0.06), rgba(255,255,255,0.02));
  box-shadow: 4px 4px 0 rgba(0,0,0,0.4);
}

.footer-tagline {
  color: rgba(255,255,255,0.7);
  font-size: 14px;
  line-height: 1.8;
}

.footer-social {
  display: flex;
  flex-wrap: wrap;
  gap: var(--spacing-sm);
  margin-top: var(--spacing-sm);
}

.footer-social-link {
  width: 46px;
  height: 46px;
  border: 2px solid var(--color-marfil);
  color: var(--color-marfil);
  display: grid;
  place-items: center;
  font-size: 20px;
  border-radius: 50%;
  transition: all 220ms cubic-bezier(0.4, 0, 0.2, 1);
  position: relative;
  overflow: hidden;
}

.footer-social-link::before {
  content: '';
  position: absolute;
  inset: 0;
  background: linear-gradient(135deg, var(--color-turquesa), var(--color-lavanda));
  opacity: 0;
  transition: opacity 220ms;
}

.footer-social-link:hover,
.footer-social-link:focus-visible {
  transform: translate(-2px, -2px);
  box-shadow: 4px 4px 0 rgba(0,0,0,0.5);
}

.footer-social-link:hover::before,
.footer-social-link:focus-visible::before {
  opacity: 1;
}

