  position: relative;
  z-index: 1;
}

/* Secciones */
.footer-section h4 {
  color: var(--color-turquesa);
  margin-bottom: var(--spacing-sm);
  font-size: 18px;
  text-transform: uppercase;
  letter-spacing: 1px;
