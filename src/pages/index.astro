---
// src/pages/index.astro
const pageTitle = "FestiGeek Canarias 2025";
---

<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{pageTitle}</title>

  <!-- Google Fonts -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Space+Grotesk:wght@400;600;700;800;900&family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">

  <!-- Iconos -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">

  <!-- Stripe.js -->
  <script src="https://js.stripe.com/v3/"></script>

  <style>
  :root {
    --color-marfil: #F7F4EA;
    --color-negro: #111111;
    --color-gris: #5A5A5A;
    --color-borde-suave: #E7E2D7;
    --color-blanco: #FFFFFF;

    --color-turquesa: #2EE7D3;
    --color-menta: #23D9B3;
    --color-lima: #C9F86A;
    --color-amarillo: #FFD64D;
    --color-naranja: #FF7A00;
    --color-coral: #FF4F6D;
    --color-rojo: #f40404;
    --color-lavanda: #B79BF5;
    --color-cian-claro: #7CF3E9;
    --color-azul: #0051b3;

    --color-night: #101320;
    --color-night-deep: #0b0e17;

    --spacing-xs: 8px;
    --spacing-sm: 16px;
    --spacing-md: 24px;
    --spacing-lg: 32px;
    --spacing-xl: 48px;
    --spacing-2xl: 64px;
    --spacing-3xl: 96px;
  }

  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  body {
    font-family: 'Inter', sans-serif;
    background-color: var(--color-marfil);
    color: var(--color-negro);
    line-height: 1.6;
    overflow-x: hidden;
  }

  h1, h2, h3, h4 {
    font-family: 'Space Grotesk', sans-serif;
    font-weight: 800;
    line-height: 1.2;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  h1 {
    font-size: clamp(48px, 9vw, 82px);
    font-weight: 900;
  }

  h2 {
    font-size: clamp(34px, 6vw, 56px);
  }

  h3 {
    font-size: clamp(22px, 3.5vw, 30px);
    font-weight: 700;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 var(--spacing-md);
  }

  @media (min-width: 768px) {
    .container {
      padding: 0 var(--spacing-lg);
    }
  }

  /* Accesibilidad */
  .skip-link {
    position: absolute;
    top: -40px;
    left: 50%;
    transform: translateX(-50%);
    background: var(--color-negro);
    color: var(--color-marfil);
    padding: var(--spacing-xs) var(--spacing-sm);
    border-radius: 4px;
    z-index: 1000;
    text-decoration: none;
    transition: top 200ms ease;
  }

  .skip-link:focus {
    top: 16px;
  }

  html {
    scroll-behavior: smooth;
  }

  section {
    scroll-margin-top: 90px;
  }

  /* Botones */
  .btn {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: 10px;
    padding: 16px 36px;
    border: 2px solid var(--color-negro);
    font-family: 'Space Grotesk', sans-serif;
    font-weight: 700;
    font-size: 14px;
    text-decoration: none;
    text-transform: uppercase;
    letter-spacing: 1.2px;
    transition: all 220ms cubic-bezier(0.4, 0, 0.2, 1);
    cursor: pointer;
    position: relative;
    overflow: hidden;
    text-align: center;
    background: none;
  }

  .btn::after {
    content: '';
    position: absolute;
    inset: 0;
    opacity: 0;
    transition: opacity 220ms ease;
  }

  .btn:focus-visible {
    outline: 3px solid var(--color-turquesa);
    outline-offset: 3px;
  }

  .btn-primary {
    background: var(--color-negro);
    color: var(--color-marfil);
    box-shadow: 4px 4px 0 rgba(0,0,0,0.4);
  }

  .btn-primary::after {
    background: linear-gradient(90deg, transparent, rgba(255,255,255,0.3), transparent);
    mix-blend-mode: screen;
  }

  .btn-primary:hover {
    transform: translate(-3px, -3px);
    box-shadow: 8px 8px 0 rgba(0,0,0,0.45);
  }

  .btn-primary:hover::after {
    opacity: 1;
  }

  .btn-outline {
    background: transparent;
    color: rgba(201, 237, 233, 0.25);
    box-shadow: 4px 4px 0 rgba(0, 0, 0, 0.25);
  }

  .btn-outline:hover {
    background: var(--color-negro);
    color: var(--color-marfil);
    transform: translate(-3px, -3px);
  }

  .btn-outline:hover::after {
    opacity: 1;
    background: rgba(46, 15, 15, 0.14);
  }

  .btn-outline-light {
    background: transparent;
    color: var(--color-marfil);
    border-color: var(--color-marfil);
    box-shadow: 4px 4px 0 rgba(0,0,0,0.45);
  }

  .btn-outline-light:hover {
    background: var(--color-marfil);
    color: var(--color-negro);
  }

  .btn-sm {
    padding: 12px 20px;
    font-size: 11px;
    letter-spacing: 1.4px;
  }

  .btn .btn-icon {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    width: 18px;
    height: 18px;
    transition: transform 180ms ease;
  }

  .btn:hover .btn-icon,
  .btn:focus-visible .btn-icon {
    transform: translateX(4px) scale(1.5);
    color: #3fd416;
  }

  /* Header */
  .header {
    background: rgba(17, 18, 30, 0.85);
    backdrop-filter: blur(12px);
    height: 72px;
    border-bottom: 3px solid var(--color-turquesa);
    display: flex;
    align-items: center;
    position: sticky;
    top: 0;
    z-index: 120;
  }

  .header .container {
    width: 100%;
  }

  .main-nav {
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: var(--spacing-md);
  }

  .brand-mark {
    display: inline-flex;
    align-items: center;
    gap: 14px;
    color: var(--color-marfil);
    text-decoration: none;
  }

  .brand-mark span {
    display: inline-flex;
    padding: 6px 12px;
    background: linear-gradient(135deg, rgba(255,255,255,0.25), rgba(255,255,255,0));
    border: 2px solid var(--color-marfil);
    box-shadow: 4px 4px 0 rgba(0,0,0,0.4);
    font-family: 'Space Grotesk', sans-serif;
    font-weight: 900;
    letter-spacing: 2px;
    text-transform: uppercase;
  }

  .brand-slogan {
    font-size: 12px;
    text-transform: uppercase;
    letter-spacing: 2px;
    color: rgba(255,255,255,0.7);
  }

  .nav-links {
    display: none;
    gap: var(--spacing-lg);
    align-items: center;
  }

  .nav-links a {
    font-weight: 600;
    color: rgba(255,255,255,0.85);
    text-decoration: none;
    position: relative;
    padding: 6px 0;
    transition: color 220ms ease;
  }

  .nav-links a::after {
    content: '';
    position: absolute;
    bottom: -6px;
    left: 0;
    width: 0;
    height: 3px;
    background-color: var(--color-turquesa);
    transition: width 220ms ease;
  }

  .nav-links a:hover,
  .nav-links a:focus-visible {
    color: var(--color-turquesa);
  }

  .nav-links a:hover::after,
  .nav-links a:focus-visible::after {
    width: 100%;
  }

  #nav-cta {
    display: none;
  }

  .menu-toggle {
    background: none;
    border: 2px solid var(--color-marfil);
    color: var(--color-marfil);
    padding: 8px 14px;
    cursor: pointer;
    font-weight: 700;
    font-size: 14px;
    text-transform: uppercase;
    letter-spacing: 1px;
  }

  .menu-toggle:hover {
    background-color: var(--color-marfil);
    color: var(--color-night);
  }

  @media (min-width: 992px) {
    .nav-links {
      display: flex;
    }
    .menu-toggle {
      display: none;
    }
  }

  /* Hero */
  .hero {
    min-height: 78vh;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
    overflow: hidden;
    background: linear-gradient(135deg, rgba(16, 19, 32, 0.95), rgba(20, 12, 30, 0.96));
    color: var(--color-marfil);
    text-shadow: 3px 3px 12px rgba(0,0,0,0.65);
  }

  .hero::before {
    content: '';
    position: absolute;
    inset: 0;
    background:
      linear-gradient(140deg, rgba(44, 211, 233, 0.45), rgba(183, 155, 245, 0.3), rgba(255, 122, 0, 0.3)),
      url('/public/images/bg-hero.webp') center/cover no-repeat;
    opacity: 0.65;
  }

  .hero::after {
    content: '';
    position: absolute;
    inset: 0;
    background: radial-gradient(80% 80% at 50% 50%, rgba(0,0,0,0), rgba(0,0,0,0.65));
  }

  .hero-content {
    text-align: center;
    position: relative;
    z-index: 1;
    display: grid;
    gap: var(--spacing-md);
    justify-items: center;
    animation: fadeInUp 800ms ease-out;
  }

  .hero-pretitle {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    padding: 8px 18px;
    background: rgba(0,0,0,0.35);
    border: 2px solid rgba(255,255,255,0.4);
    border-radius: 999px;
    font-size: 13px;
    letter-spacing: 2px;
    text-transform: uppercase;
  }

  .hero h1 {
    margin-bottom: var(--spacing-sm);
  }

  .hero-subtitle {
    font-size: clamp(18px, 3.5vw, 26px);
    font-weight: 500;
    color: rgba(255,255,255,0.82);
    text-transform: none;
    letter-spacing: 0.5px;
    max-width: 560px;
    opacity: 0;
    animation: fadeInUp 800ms ease-out 160ms forwards;
  }

  .hero-tagline {
    font-size: 14px;
    color: rgba(255,255,255,0.65);
    letter-spacing: 1.2px;
    text-transform: uppercase;
  }

  .hero-cta {
    margin-top: var(--spacing-lg);
    display: flex;
    gap: var(--spacing-sm);
    flex-wrap: wrap;
    justify-content: center;
    opacity: 0;
    animation: fadeInUp 800ms ease-out 320ms forwards;
  }

  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  /* Shapes */
  .shape {
    position: absolute;
    pointer-events: none;
    opacity: 0.65;
    filter: drop-shadow(8px 8px 0 rgba(0,0,0,0.45));
  }

  .shape-square {
    border: 3px solid rgba(255,255,255,0.4);
  }

  .shape-1 {
    width: 160px;
    height: 160px;
    background: var(--color-turquesa);
    top: 12%;
    right: 7%;
    transform: rotate(45deg);
    animation: float 6s ease-in-out infinite;
  }

  .shape-2 {
    width: 110px;
    height: 110px;
    background: var(--color-coral);
    bottom: 12%;
    left: 6%;
    animation: float 5.5s ease-in-out infinite 1s;
  }

  .shape-3 {
    width: 90px;
    height: 90px;
    background: var(--color-lima);
    top: 48%;
    left: 12%;
    transform: rotate(30deg);
    animation: float 7s ease-in-out infinite 2s;
  }

  @keyframes float {
    0%, 100% { transform: translateY(0) rotate(45deg); }
    50% { transform: translateY(-18px) rotate(45deg); }
  }

  /* Tickets */
  .tickets-section {
    padding: var(--spacing-3xl) 0;
    background: var(--color-marfil);
    position: relative;
    overflow: hidden;
    border-top: 4px solid var(--color-negro);
  }

  .tickets-section::before {
    content: '';
    position: absolute;
    inset: 0;
    background-image: url('/public/images/comic-halftone.webp');
    /*background-size: 420px 420px;*/
    background-repeat: no-repeat;
    background-position: center;
    background-size: cover;
    opacity: 0.1;
    pointer-events: none;
    mix-blend-mode: multiply;
    
  }

  .tickets-section::after {
    content: '';
    position: absolute;
    inset: 0;
    background: linear-gradient(180deg, rgba(255,122,0,0.09), transparent 40%, transparent 60%, rgba(46,231,211,0.08));
    pointer-events: none;
  }

  .tickets-heading {
    text-align: center;
    margin-bottom: var(--spacing-2xl);
    display: grid;
    gap: var(--spacing-xs);
  }

  .tickets-eyebrow {
    display: inline-flex;
    align-items: center;
    gap: 6px;
    padding: 6px 14px;
    border: 2px solid var(--color-negro);
    background-color: var(--color-lima);
    font-size: 12px;
    font-weight: 800;
    text-transform: uppercase;
    letter-spacing: 1.6px;
    justify-self: center;
    box-shadow: 4px 4px 0 rgba(0,0,0,0.4);
  }

  .tickets-subtitle {
    font-size: 16px;
    letter-spacing: 1px;
    text-transform: none;
    color: var(--color-gris);
  }

  .tickets-summary {
    max-width: 760px;
    margin: 0 auto var(--spacing-2xl);
    text-align: center;
    display: grid;
    gap: var(--spacing-sm);
    color: rgba(17,17,17,0.85);
  }

  .tickets-meta {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: var(--spacing-sm);
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .tickets-meta li {
    display: inline-flex;
    align-items: center;
    gap: 10px;
    padding: 10px 18px;
    border: 2px dashed var(--color-negro);
    background: rgba(255,255,255,0.7);
    font-weight: 600;
    letter-spacing: 0.4px;
  }

  .tickets-meta i {
    color: var(--color-coral);
  }

  .tickets-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: var(--spacing-lg);
    max-width: 1120px;
    margin: 0 auto;
  }

  .ticket-card {
    background-color: var(--color-menta);
    border: 3px solid var(--color-negro);
    padding: var(--spacing-lg);
    text-align: center;
    position: relative;
    display: grid;
    gap: var(--spacing-md);
    transition: all 260ms cubic-bezier(0.4, 0, 0.2, 1);
    box-shadow: 6px 6px 0 rgba(0,0,0,0.4);
  }

  .ticket-card:hover {
    transform: translate(-4px, -4px) rotate(-0.5deg);
    box-shadow: 10px 10px 0 rgba(0,0,0,0.5);
  }

  .ticket-card::after {
    content: '';
    position: absolute;
    inset: 12px;
    border: 2px dashed rgba(0,0,0,0.2);
    pointer-events: none;
    opacity: 0;
    transition: opacity 220ms ease;
  }

  .ticket-card:hover::after {
    opacity: 1;
  }

  .ticket-card.featured {
    border-width: 4px;
    transform: translateY(-8px);
    background: linear-gradient(145deg, rgba(114, 66, 21, 0.41), rgba(255,122,0,0.05));
  }

  .ticket-card.featured:hover {
    transform: translate(-4px, -12px);
  }

  .ticket-card--highlight {
    border-width: 4px;
    transform: translateY(-8px);
    background: linear-gradient(145deg, rgba(204, 1, 1, 0.761), rgba(213, 101, 4, 0.75));
  }

  .ticket-card--highlight:hover {
    transform: translate(-4px, -12px);
  }

  .ticket-card-header {
    display: grid;
    gap: var(--spacing-xs);
    justify-items: center;
  }

  .discount-badge {
    position: absolute;
    top: -12px;
    right: 20px;
    background: var(--color-coral);
    color: var(--color-blanco);
    padding: 8px 16px;
    font-size: 14px;
    font-weight: 800;
    border: 2px solid var(--color-negro);
    box-shadow: 4px 4px 0 rgba(0,0,0,0.4);
    z-index: 10;
  }

  .ticket-type {
    font-size: 12px;
    font-weight: 800;
    text-transform: uppercase;
    letter-spacing: 2.2px;
    padding: var(--spacing-xs) var(--spacing-sm);
    border: 2px solid var(--color-negro);
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: 6px;
    background-color: var(--color-marfil);
    margin: 0 auto;
  }

  .ticket-type--day {
    /*background: linear-gradient(135deg, #fff0c2, #ffe9a6);*/
    background: linear-gradient(135deg, #f5f7d1cf, #fffcf1cf);
  }

  .ticket-type--weekend {
    background: linear-gradient(135deg, #390303c8, #121228c8);
    color: var(--color-amarillo);
    box-shadow: 4px 4px 0 rgba(0,0,0,0.45);
    border-color: #111111;
  }

  .ticket-type--vip {
    background: linear-gradient(135deg, #f5f7d1cf, #fffcf1cf);
  }

  .ticket-price {
    font-family: 'Space Grotesk', sans-serif;
    font-size: 58px;
    font-weight: 900;
    line-height: 1;
  }

  .ticket-price span {
    font-size: 28px;
    font-weight: 700;
    vertical-align: super;
  }

  .ticket-price-group {
    display: grid;
    gap: 6px;
  }

  .ticket-original-price {
    font-size: 22px;
    text-decoration: line-through;
    color: rgba(0,0,0,0.45);
  }

  .ticket-price-note {
    font-size: 14px;
    color: rgba(17,17,17,0.7);
    line-height: 1.6;
  }

  .ticket-title {
    font-size: 24px;
    font-weight: 800;
    margin-bottom: var(--spacing-xs);
  }

  .ticket-label {
    display: inline-flex;
    align-items: center;
    gap: 6px;
    padding: 6px 12px;
    border: 2px dashed rgba(0,0,0,0.3);
    font-size: 11px;
    text-transform: uppercase;
    letter-spacing: 1.2px;
    background-color: rgba(0,0,0,0.05);
  }

  .ticket-label--best {
    border-style: solid;
    border-color: var(--color-negro);
    background: rgba(142, 55, 70, 0.12);
    color: var(--color-negro);
  }

  .ticket-features {
    list-style: none;
    padding: 0;
    margin: var(--spacing-md) 0;
    text-align: left;
    display: grid;
    gap: 12px;
  }

  .ticket-features li {
    display: grid;
    grid-template-columns: 24px 1fr;
    gap: 12px;
    align-items: start;
    font-weight: 600;
    color: #2f2f2f;
  }

  .ticket-features li::before {
    content: '‚òÖ';
    color: var(--color-menta);
    font-size: 18px;
    line-height: 1;
  }

  .ticket-card-footer {
    display: grid;
    gap: var(--spacing-xs);
    justify-items: center;
  }

  .ticket-guarantee {
    display: inline-flex;
    align-items: center;
    gap: 6px;
    font-size: 12px;
    font-weight: 600;
    color: rgba(0,0,0,0.6);
  }

  .ticket-footer-note {
    text-align: center;
    margin-top: var(--spacing-xl);
  }

  .tickets-cta {
    margin-top: var(--spacing-2xl);
    text-align: center;
    display: grid;
    gap: var(--spacing-sm);
    justify-items: center;
  }

  .tickets-cta-note {
    font-size: 14px;
    color: rgba(17,17,17,0.7);
  }

  .tickets-cta-note a {
    color: var(--color-negro);
    font-weight: 600;
    text-decoration: underline;
  }

  .chip {
    display: inline-flex;
    align-items: center;
    gap: 10px;
    padding: 14px 24px;
    background-color: var(--color-amarillo);
    border: 2px solid var(--color-negro);
    font-size: 16px;
    font-weight: 700;
    transition: all 220ms ease;
    box-shadow: 4px 4px 0 rgba(0,0,0,0.35);
    letter-spacing: 0.8px;
  }

  .chip:hover {
    transform: translate(-2px, -2px);
    box-shadow: 8px 8px 0 rgba(0,0,0,0.4);
  }

  .chip-icon {
    font-size: 20px;
  }

  /* Invitados */
  #invitados {
    position: relative;
    overflow: hidden;
    padding: var(--spacing-3xl) 0;
    border-top: 4px solid var(--color-negro);
    border-bottom: 4px solid var(--color-negro);
    background:
      linear-gradient(145deg, rgba(10, 10, 10, 0.55), rgba(16, 3, 30, 0.55)),
      url('/public/images/bg-invitados.webp') center/cover no-repeat;
    color: var(--color-marfil); 
    text-shadow: 0 2px 4px rgba(20, 24, 23, 0.9);
  }

  #invitados::before {
    content: '';
    position: absolute;
    inset: 0;
    background: rgba(6, 10, 20, 0.65);
    backdrop-filter: blur(1px);
    pointer-events: none;
  }

  #invitados > * {
    position: relative;
    z-index: 1;
  }

  .guests-heading {
    text-align: center;
    margin-bottom: var(--spacing-2xl);
    display: grid;
    gap: var(--spacing-xs);
  }

  .guests-subtitle {
    color: rgba(255, 255, 255, 0.65);
    letter-spacing: 1px;
    font-size: 15px;
    text-transform: uppercase;
  }

  .guests-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
    gap: var(--spacing-lg);
    max-width: 1040px;
    margin: 0 auto;
  }

  .guest-card {
    position: relative;
    border-radius: 12px;
    overflow: hidden;
    transition: transform 240ms ease;
    isolation: isolate;
  }

  .guest-card:hover,
  .guest-card:focus-within {
    transform: translateY(-6px);
  }

  .guest-card:focus-within {
    outline: 3px solid var(--color-turquesa);
    outline-offset: 6px;
  }

  .guest-image {
